<div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= render 'books/userinfo', current_user: @user, book: @new_book, user: @user %>
   </div>
   <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table table-striped">
     <tbody>
      <td><div><center>
           <%= link_to user_path(@book.user_id) do %>
           <%= attachment_image_tag @book.user, :profile_image, size: '40x40', fallback: "no_image_icon.jpg" %>
           <% end %></center></div>
          <div><center><%= link_to @user.name,user_path(@user.id) %></center></div>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td></td>
      <% if @user.id==current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success'  %></td>
      <td><%= link_to "Destroy", book_path(@book.id), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
</div>